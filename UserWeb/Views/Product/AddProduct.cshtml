@model UserWeb.Models.AddProductViewModel
@{
    string actionName = "AddProduct";
    string btnName = "添加";
}
@if (Model.IsEdit)
{
    <h2>编辑产品</h2>

    actionName = "EditProduct";
    btnName = "编辑";
}
else
{
    <h2>添加产品</h2>

}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@actionName">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.IsEdit)
            {
                <input asp-for="ProductModel.ProductId" name="ProductId" type="hidden" />
            }
            <div class="form-group">
                <label asp-for="ProductModel.ProductName" class="control-label">产品名</label>
                <input asp-for="ProductModel.ProductName" name="ProductName" class="form-control" />
                <span asp-validation-for="ProductModel.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductModel.ProductDes" class="control-label">产品描述</label>
                <input asp-for="ProductModel.ProductDes" name="ProductDes" class="form-control" />
                <span asp-validation-for="ProductModel.ProductDes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@btnName" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductList">产品列表</a>
</div>

